#define _POSIX_C_SOURCE 200809L
#include <errno.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
    char *line = NULL;
    size_t cap = 0;

    printf("Please enter some text: ");
    fflush(stdout);

    errno = 0;
    ssize_t len = getline(&line, &cap, stdin);

    if (len == -1) {
        perror("getline");
        free(line);
        return 1;
    }

    printf("You typed: %s", line);

    free(line);
    return 0;
}

